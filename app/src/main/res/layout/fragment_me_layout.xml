<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="fitXY"
        android:src="@drawable/splash_launch"
        android:layout_alignParentBottom="true"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"

        >

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/img_userHead"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/default_head"
            android:layout_centerVertical="true"
            app:qmui_is_circle="true"
            android:layout_marginLeft="70dp"/>



        <LinearLayout
            android:id="@+id/ll_userContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="30dp"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名: 水电费经理"
                android:textSize="18sp"
                android:textColor="@color/text333"/>

            <TextView
                android:id="@+id/tv_userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话: 18877889900"
                android:textSize="16sp"
                android:textColor="@color/text666"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_userMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱: 18877889900"
                android:textSize="14sp"
                android:textColor="@color/text666"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_userLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="权限级别: 1"
                android:textSize="16sp"
                android:textColor="@color/text666"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_me_logout"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="150dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_me_login"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="150dp"
        android:visibility="gone"
        />

</RelativeLayout>