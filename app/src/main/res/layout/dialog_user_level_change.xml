<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="修改用户权限"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/myscore_color_yellow"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="权限级别: 1 身份: 游客\n权限级别: 2 身份: 初级管理员\n权限级别: 3 身份: 高级管理员"
        android:textSize="14sp"
        android:textColor="@color/text666"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_cut"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_cut"
            />

        <TextView
            android:id="@+id/tv_levelShow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="14sp"
            android:textColor="@color/text666"
            android:gravity="center"
            android:background="@drawable/shape_5r_round_666666_line"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_add"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_100r_round_1cc3d3"
            android:gravity="center"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="确定"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_100r_round_1cc3d3"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>