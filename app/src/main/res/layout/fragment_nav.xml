<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <!--报表、管理、记账、我-->
    <!--记账-->
    <com.kangce.finance.ui.nav.NavigationButton
        android:id="@+id/nav_item_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/lay_12"
        android:paddingRight="@dimen/lay_12" />

    <!--报表-->
    <com.kangce.finance.ui.nav.NavigationButton
        android:id="@+id/nav_item_form"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/lay_12"
        android:paddingRight="@dimen/lay_12" />
    <!--管理-->
    <com.kangce.finance.ui.nav.NavigationButton
        android:id="@+id/nav_item_manage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/lay_12"
        android:paddingRight="@dimen/lay_12" />

    <!--我的-->
    <com.kangce.finance.ui.nav.NavigationButton
        android:id="@+id/nav_item_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/lay_12"
        android:paddingRight="@dimen/lay_12" />
</LinearLayout>
