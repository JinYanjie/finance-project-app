<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--姓    名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    style="@style/tv_name"
                    android:text="姓         名" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--手机号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPhone"
                    style="@style/tv_name"
                    android:text="手机号码" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--性    别-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGender"
                    style="@style/tv_name"
                    android:text="性          别" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--民    族-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNation"
                    style="@style/tv_name"
                    android:text="民          族" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/nation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--出生日期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBirthday"
                    style="@style/tv_name"
                    android:text="出生日期" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/birthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--职员类别-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvType"
                    style="@style/tv_name"
                    android:text="职员类别" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/position"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--文化程度-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCulture"
                    style="@style/tv_name"
                    android:text="文化程度" />

                <TextView
                    android:id="@+id/education"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp"
                    android:textColor="#333" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--入职日期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvInDate"
                    style="@style/tv_name"
                    android:text="入职日期" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/inDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--职员状态-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvState"
                    style="@style/tv_name"
                    android:text="职员状态" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--职    务-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvJob"
                    style="@style/tv_name"
                    android:text="职          务" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/job"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--部    门-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDepartment"
                    style="@style/tv_name"
                    android:text="部          门" />

                <TextView
                    android:id="@+id/department"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp"
                    android:textColor="#333" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--离职日期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOutDate"
                    style="@style/tv_name"
                    android:text="离职日期" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/outDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--籍    贯-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAddress"
                    style="@style/tv_name"
                    android:text="籍          贯" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/birthplace"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--身份证号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvId"
                    style="@style/tv_name"
                    android:text="身份证号码" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/idCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--银行名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBankName"
                    style="@style/tv_name"
                    android:text="银行名称" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/bankName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
            <!--银行卡号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBankNum"
                    style="@style/tv_name"
                    android:text="银行卡号" />

                <com.kangce.finance.widget.EditTextClear
                    android:id="@+id/bankNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingRight="12dp" />

                <include layout="@layout/line_left_12" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>