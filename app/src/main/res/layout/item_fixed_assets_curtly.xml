<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">


        <TextView
            android:id="@+id/tv_assetsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资产名称XXXX"
            android:textSize="18sp"
            android:textColor="@color/text333"/>

        <TextView
            android:id="@+id/tv_assetsCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编号:x-32131"
            android:textSize="14sp"
            android:textColor="@color/text666"
            android:layout_marginTop="5dp"/>
        
        <TextView
            android:id="@+id/tv_inputDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入账时间:2018-12-01"
            android:textSize="14sp"
            android:textColor="@color/text666"
            android:layout_marginTop="5dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/tv_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textSize="20sp"
            android:textColor="@color/myscore_color_yellow"
            />


        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卖出"
            android:textSize="20sp"
            android:textColor="@color/myscore_color_yellow"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>


</RelativeLayout>